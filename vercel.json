{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "api/health.js": {
      "maxDuration": 10
    },
    "api/verify-subscription.js": {
      "maxDuration": 15
    }
  },
  "env": {
    "BOT_TOKEN": "@bot_token",
    "CHANNEL_ID": "@channel_id"
  }
}
